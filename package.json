{
  "name": "advanced",
  "version": "0.1.0",
  "description": "advanced",
  "license": "MIT",
  "repository": "",
  "author": {
    "name": "Julio Antúnez Tarín",
    "email": "julio.antunez.tarin@gmail.com",
    "url": "https://github.com/jatap"
  },
  "keywords": [
    "typescript"
  ],
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf lib && rimraf reports",
    "format": "prettier --write \"{src,test}/**/*.ts\" --single-quote --trailing-comma es5",
    "lint": "tslint --force --format verbose 'src/**/*.ts' 'test/**/*.spec.ts'",
    "prepare": "npm run build",
    "prebuild": "npm run clean && npm run format && npm run lint && echo Using TypeScript && tsc --version",
    "build": "tsc --pretty",
    "test": "nyc mocha",
    "test:watch": "nyc mocha --watch --watch-extensions ts || true",
    "test:coverage": "nyc check-coverage || true",
    "test:coverage:open": "open reports/index.html",
    "test:report": "nyc report",
    "watch": "npm run build -- --watch",
    "commit": "git-cz",
    "release": "standard-version --no-verify -t ''"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mocha": "^2.2.47",
    "@types/node": "^8.0.0",
    "chai": "^4.1.2",
    "commitizen": "^2.9.6",
    "cz-customizable": "^5.2.0",
    "husky": "^0.15.0-rc.3",
    "mocha": "^5.0.0",
    "nyc": "^11.4.1",
    "prettier": "^1.5.2",
    "rimraf": "^2.0.0",
    "source-map-support": "^0.5.3",
    "standard-version": "^4.3.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.0.0",
    "tslint-config-prettier": "^1.1.0",
    "tslint-no-unused-expression-chai": "0.0.3",
    "typescript": "^2.3.0"
  },
  "engines": {
    "node": "8.9.4",
    "npm": "5.6.0"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "temp-directory": "./reports/.nyc_output",
    "report-dir": "./reports",
    "reporter": [
      "text-summary",
      "lcovonly",
      "html"
    ],
    "cache": true,
    "all": true
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "config/cz-customizable/base.js"
    }
  }
}
